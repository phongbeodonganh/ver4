# Production Environment Configuration for LinhMai Academy
# Copy this to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_USER=linhmai_user
DB_PASSWORD=your_secure_password_here
DB_NAME=linhmai_academy
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Frontend URLs (Your domains)
FRONTEND_URL=https://www.linhmai.edu.vn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=1073741824
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@linhmai.edu.vn
EMAIL_PASS=your_email_password

# Domain Configuration
DOMAIN=linhmai.edu.vn
WWW_DOMAIN=www.linhmai.edu.vn
